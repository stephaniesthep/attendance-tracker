{
  "name": "attendance-tracker",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "@react-router/dev build",
    "dev": "cross-env NODE_ENV=development node server.js",
    "start": "node server.js",
    "typecheck:gen": "react-router typegen",
    "typecheck:check": "pnpm --package=typescript dlx tsc --build --pretty --watch",
    "typecheck": "pnpm typecheck:gen && pnpm typecheck:check",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:prod": "tsx scripts/seed-production.js",
    "db:generate": "prisma generate",
    "db:generate:prod": "prisma generate --schema=prisma/schema.production.prisma",
    "db:push": "prisma db push",
    "db:push:prod": "prisma db push --schema=prisma/schema.production.prisma",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:prod": "prisma migrate deploy --schema=prisma/schema.production.prisma",
    "postinstall": "prisma generate",
    "netlify:build": "npm run db:generate:prod && npm run build"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-router/express": "^7.7.0",
    "@react-router/node": "^7.7.0",
    "@tanstack/react-router": "^1.129.0",
    "@tanstack/react-table": "^8.21.3",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.7.5",
    "date-fns": "^4.1.0",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "isbot": "^5.1.27",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.525.0",
    "morgan": "^1.10.0",
    "prisma": "^6.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.0",
    "react-webcam": "^7.2.0",
    "remix-flat-routes": "^0.8.5",
    "tailwind-merge": "^3.3.1",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.7.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.1",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lru-cache": "^7.10.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "cross-env": "^7.0.3",
    "lightningcss": "^1.30.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
