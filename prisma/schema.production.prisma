// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attendances Attendance[]

  @@map("users")
}

model Attendance {
  id          String   @id @default(cuid())
  userId      String
  checkIn     DateTime?
  checkOut    DateTime?
  date        String   // Format: YYYY-MM-DD
  status      String   @default("present") // present, absent, late
  photoIn     String?  // Base64 encoded photo for check-in
  photoOut    String?  // Base64 encoded photo for check-out
  locationIn  String?  // Location metadata for check-in
  locationOut String?  // Location metadata for check-out
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("attendances")
}

model SuperAdmin {
  id                   String   @id @default(cuid())
  email                String   @unique
  password             String
  name                 String
  superadminVerifyCode String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("superadmins")
}